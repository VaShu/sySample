{% extends '::baseAdmin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <br>
            <h3 class="pull-left" style="margin: 0; padding: 0;">{{ operation }} problem</h3>
            <div class="text-right filter-form">
                <a href="{{ path("admin_problem_list") }}" class="btn btn-default btn-sm btn-raised"> Back</a>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row no-margin margin-bottom-15">
                <div class="col-md-6 col-lg-6 error-handling form-group label-floating">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    <p class="help-block"></p>
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <br>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
            <button type="submit" class="btn btn-default btn-raised">{{ operation }}</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
